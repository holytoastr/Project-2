<div class='corgi'>
  <div class='large'>
    <%= image_tag @corgi.img_url, alt: "Corgi wisdom: #{@corgi.quote}" %>
  </div>
  <div class='quote'>
    <%= @corgi.quote %>
  </div>
  <div>
    <% @corgi.comments.each do |comment| %>
    <div class='comments'>
      <%= comment.text %>
      -- <%= comment.commenter %>
      (posted at: <%= comment.created_at %>)
    </div>

    <% end %>
    <%= link_to '(Add a new comment)', new_corgi_comment_path(:corgi_id) %>
  </div>
</div>
