<div class="emotion">
  <%= @emotion.emotion_name %>
</div>
<% if current_user %>
<div class='create-corgi'>
  <%= link_to '(Add a corgi to the corgum)', new_emotion_corgi_path(@emotion) %>
</div>
<% else %>
<div class='create-corgi'>
  <%= link_to '(Sign in to add more corgis)', new_user_session_path %>
</div>
<% end %>

<% @emotion.corgis.each do |corgi| %>
  <div class='corgi'>
    <div class='picture'>
      <%= image_tag corgi.img_url, alt: "A #{@emotion.emotion_name} corgi" %>
    </div>
    <div class='quote'>
      <%= corgi.quote %>
    </div>
    <p class='comments'>
      <%= corgi.comments.last.try :text %>
      <%= link_to "(Read more comments)", corgi_path(corgi) %>
    </p>
  </div>
<% end %>
